{
  "CLIENT": {
    "APP": {
      "ENTRY": "client/src/app.js",
      "JS": "client/src/**/*.js"
    },
    "BUILD": "client/build",
    "FONTS": "client/font/*.*",
    "IMAGES": "client/img/*.*",
    "SASS": {
      "APP": ["client/sass/**/*.scss", "client/app/**/*.scss"],
      "INCLUDES": []
    },
    "TEMPLATES": "client/*/*.html",
    "VIEWS": "client",
    "TEST": {
      "UNIT": "client/test/*.js",
      "E2E": "client/test/e2e/*.js",
      "KARMA": []
    }
  },
  "SERVER": {
    "APP": {
      "ENTRY": "server/build/server.js",
      "JS": "server/src/**/*.js"
    },
    "BUILD": "server/build",
    "TEST": {
      "UNIT": "server/test/*.js",
      "E2E": "server/test/e2e/*.js"
    }
  }
}
