{
  "SERVER": {
    "APP": {
      "ENTRY": "server/server.js",
      "JS": "server/**/*.js"
    },
    "TEST": {
      "UNIT": "server/test/*.js",
      "E2E": "server/test/e2e/*.js"
    }
  },
  "CLIENT": {
    "APP": {
      "ENTRY": "client/app/app.js",
      "JS": "client/app/**/*.js"
    },
    "BUILD": "client/build",
    "FONTS": "client/font/*.*",
    "IMAGES": "client/img/*.*",
    "SASS": {
      "APP": ["client/sass/**/*.scss", "client/app/**/*.scss"],
      "INCLUDES": ["bower_components/foundation-apps/scss"]
    },
    "TEMPLATES": "client/*/*.html",
    "VIEWS": "client",
    "TEST": {
      "UNIT": "client/test/*.js",
      "E2E": "client/test/e2e/*.js",
      "KARMA": []
    }
  },
  "FOUNDATION": {
    "BASE": "bower_components/foundation-apps/js/angular/",
    "BUILD": "client/foundation",
    "ICONIC": "bower_components/foundation-apps/iconic/**/*.svg",
    "JS": "**/*.js",
    "TEMPLATES": "components/**/*.html",
    "DEPENDENCIES": [
      "bower_components/fastclick/lib/fastclick.js",
      "bower_components/viewport-units-buggyfill/viewport-units-buggyfill.js",
      "bower_components/tether/tether.js"
    ]
  }
}
